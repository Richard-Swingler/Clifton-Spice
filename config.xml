  <icon src="www/img/sean/logo001pct25.jpg" gap:platform="ios" width="57" height="57" />
  <icon src="www/img/sean/logo001pct25.jpg" gap:platform="ios" width="72" height="72" />
  <icon src="www/img/sean/logo001pct25.jpg" gap:platform="ios" width="114" height="114" />
  <icon src="www/img/sean/logo001pct25.jpg" gap:platform="ios" width="144" height="144" />
  <icon src="www/img/sean/logo001pct25.jpg" gap:platform="ios" width="76" height="76" />
  <icon src="www/img/sean/logo001pct25.jpg" gap:platform="ios" width="120" height="120" />
  <icon src="www/img/sean/logo001pct25.jpg" gap:platform="ios" width="152" height="152" />

  <content src="index.html"/>
  <access origin="*"/>
  <preference name="UIWebViewBounce" value="false"/>
  <preference name="BackupWebStorage" value="none"/>
  <feature name="StatusBar">
    <param name="ios-package" value="CDVStatusBar" onload="true"/>
  </feature>
